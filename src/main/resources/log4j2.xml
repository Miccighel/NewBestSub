<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- Console + size-based rolling file. Paths come from sys:baseLogFileName set by LogManager. -->
    <Appenders>
        <Console name="Console-Main" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false"
                           pattern="%style{%-5.5p}{FG_Cyan} [%d{HH:mm:ss} %-8.8t %-17.17C{1} %-12.12M] %style{%m%n}{FG_Cyan}"/>
        </Console>

        <!-- append=true preserves the copied bootstrap contents after promote. -->
        <!-- Rollover files: <base>.1, <base>.2, ... (no duplicate .log). -->
        <RollingFile name="Rolling"
                     fileName="${sys:baseLogFileName}"
                     filePattern="${sys:baseLogFileName}.%i"
                     append="true">
            <PatternLayout pattern="%-5.5p [%d{HH:mm:ss} %-8.8t %-17.-17C{1} %-12M] %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Trim noisy libraries without hiding warnings. -->
        <Logger name="org.apache.hadoop" level="WARN"/>
        <Logger name="org.apache.parquet" level="INFO"/>

        <Root level="debug" includeLocation="true">
            <AppenderRef ref="Console-Main"/>
            <AppenderRef ref="Rolling"/>
        </Root>
    </Loggers>
</Configuration>
