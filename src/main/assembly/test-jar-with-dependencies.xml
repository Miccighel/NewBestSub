<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="
            http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.1.0
            https://maven.apache.org/xsd/assembly-3.1.0.xsd">
  <id>test-jar-with-dependencies</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <scope>test</scope>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <unpack>true</unpack>

      <!-- do not include the moduleâ€™s own main artifact to avoid overwrite warnings -->
      <useProjectArtifact>false</useProjectArtifact>
      <!-- keep attached artifacts like the test-jar if you attach it via maven-jar-plugin:test-jar -->
      <useProjectAttachments>true</useProjectAttachments>

      <unpackOptions>
        <excludes>
          <exclude>META-INF/*.SF</exclude>
          <exclude>META-INF/*.DSA</exclude>
          <exclude>META-INF/*.RSA</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>